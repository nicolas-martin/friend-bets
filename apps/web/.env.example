# Backend API URL - Update this to your production backend URL
EXPO_PUBLIC_API_URL=http://localhost:8080

# Solana Network Configuration
# Use 'devnet' for development, 'mainnet-beta' for production
EXPO_PUBLIC_SOLANA_NETWORK=devnet

# Solana RPC URL
# Use https://api.devnet.solana.com for devnet
# Use https://api.mainnet-beta.solana.com for mainnet
EXPO_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com

# Optional: Custom RPC endpoint (e.g., Helius, QuickNode)
# EXPO_PUBLIC_SOLANA_RPC_URL=https://your-custom-rpc-endpoint.com